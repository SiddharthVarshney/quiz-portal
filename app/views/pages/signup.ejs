<% include ../partials/head %>
<link rel="stylesheet" type="text/css" href="/css/form.css">

<form class="login" method="POST" action="/signup">
  
  <fieldset>
    
  	<legend class="legend">Signup: Cognizance ILLUSHUN</legend>
    <div class="input">
    Please use CogniID to signup and then login<br/>(If you are not having one please register at <a href="https://cognizance.org.in" target="_blank">Cognizance</a>)
    </div>
    <div class="input">
    	<input type="username" placeholder="Cogni Id" name="cogniid" required />
    </div>
    
    <div class="input">
    	<input type="password" placeholder="Password" name="password" required />
    </div>
    <div class="input center-align" style="color: red;font-size: 15px">
      <%= message %>
    </div>
    <div class="input" style="font-size: 15px; text-align: right;">
      Already registered! <a href="/login">Login</a>
    </div>
    <button type="submit" class="submit"><i class="fa fa-long-arrow-right"></i></button>
    
  </fieldset>
  
  <div class="feedback">
    Already registered! <a href="/login">Login</a>
  </div>
</form>
<script type="text/javascript" src="js/form.js"></script>